@model IEnumerable<GeekShopping.Web.Models.Product>

<br />
<br />

<div class="container p-4 border">

    <div class="row pb-2">

        <div class="col">

            <h1 class="text-primary">Products List</h1>

        </div>

        <div class="col text-end pt-1">
        
            <a asp-action="ProductCreate" class="btn btn-outline-primary">
                <i class="fas fa-plus"></i> Create New Product
            </a>

        </div>

    </div>

    <table class="table table-striped">

        <thead>

            <tr>

                <th>Name</th>

                <th>Category</th>

                <th>Price</th>                

                <th></th>
            </tr>

        </thead>

        <tbody>

            @foreach(var item in Model)
            {
                <tr class="table-active">

                    <td>@item.Name</td>

                    <td>@item.CategoryName</td>

                    <td>@((item.Price).ToString("c"))</td>

                    <td class="textAlignEnd">
                        <a asp-action="ProductUpdate" class="btn btn-success mb-1 me-md-3" asp-route-id="@item.Id">
                            <i class="fas fa-edit"></i>
                        </a>

                        <a asp-action="ProductDelete" class="btn btn-danger mb-1" asp-route-id="@item.Id">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>

                </tr>
            }

        </tbody>

    </table>

</div>
