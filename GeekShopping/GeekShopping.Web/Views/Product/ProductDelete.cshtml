@model GeekShopping.Web.Models.Product

<form asp-action="ProductDelete">

    <input asp-for="Id" hidden />

    <br />

    <div class="container boder p-3">

        <h1 class="text-primary">Delete Product</h1>

        <hr />       

        <div class="row g-3 align-items-center">
            <div class="col-md-3 col-xl-2">
                <label asp-for="Name" class="control-label pt-2"></label>
            </div>
            <div class="col-md-9 col-xl-10 pb-3">
                <input asp-for="Name" class="form-control" disabled/>
            </div>           
        </div>

        <div class="row g-3 align-items-center">
            <div class="col-md-3 col-xl-2">
                <label asp-for="CategoryName" class="control-label pt-2"></label>
            </div>
            <div class="col-md-9 col-xl-10 pb-3">
                <input asp-for="CategoryName" class="form-control" disabled />
            </div>
        </div>     
        
        <div class="row g-3 align-items-center">
            <div class="col-md-3 col-xl-2">
                <label asp-for="Description" class="control-label pt-2"></label>
            </div>

            <div class="col-md-9 col-xl-10 pb-3">
                <textarea asp-for="Description" class="form-control" rows="5" disabled></textarea>
            </div>
        </div>

        <div class="row g-3 align-items-center">
            <div class="col-md-3 col-xl-2">
                <label asp-for="ImageURL" class="control-label pt-2"></label>
            </div>

            <div class="col-md-9 col-xl-10 pb-3">
                <input asp-for="ImageURL" class="form-control" disabled />
            </div>
        </div>

        <div class="row g-3 align-items-center">
            <div class="col-md-3 col-xl-2">
                <label asp-for="Price" class="control-label pt-2"></label>
            </div>           

            <div class="col-md-9 col-xl-10 pb-3">
                <div class="input-group mb-3">
                    <span class="input-group-text">$</span>
                    <input type="number" asp-for="Price" class="form-control" disabled />
                </div>              
            </div>
        </div>   

        <div class="card-footer textAlignEnd">

            <a asp-action="ProductIndex" class="btn-primary btn me-md-3">Back to List</a>

            <input type="submit" value="Delete" class="btn btn-danger" />

        </div>

    </div>

</form>


