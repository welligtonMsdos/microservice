@model GeekShopping.Web.Models.User

<form asp-action="Login">

    <br />

    <div class="container boder p-3">

        <h1 class="text-primary">Login</h1>

        <div class="row-cols-auto">

            <div class="col-6">

                <hr />

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="col-2">
                    <label asp-for="UserName" class="control-label pt-2" style="font-size:20px;"></label>
                </div>

                <div class="col-10 pb-3">
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <div class="col-2">
                    <label asp-for="Password" class="control-label pt-2" style="font-size:20px;"></label>
                </div>

                <div class="col-10 pb-3">
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="col-5">
                    <input type="submit" value="Login" class="btn btn-success form-control" />
                </div>

            </div>

        </div>

    </div>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}