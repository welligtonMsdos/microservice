@model IEnumerable<GeekShopping.Web.Data.ValueObjects.UserResult>

<br />

<div class="container p-4 border">

    <div class="row pb-2">

        <div class="col">

            <h1 class="text-primary">Users List</h1>

        </div>

        <div class="col text-end pt-1">

            <a asp-action="UserCreate" class="btn btn-outline-primary">
                <i class="fas fa-plus"></i>Create New User
            </a>

        </div>

    </div>

    <table class="table">

        <thead>

            <tr>

                <th>User Name</th>

                <th>Role</th>                

                <th></th>
            </tr>

        </thead>

        <tbody>

            @foreach (var item in Model)
            {
                <tr>

                    <td>@item.UserName</td>

                    <td>@item.Role</td>                    

                    <td>
                        <a asp-action="UserUpdate" class="btn btn-success" asp-route-id="@item.Id">
                            <i class="fas fa-edit"></i>
                        </a>

                        <a asp-action="UserDelete" class="btn btn-danger" asp-route-id="@item.Id">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>

                </tr>
            }

        </tbody>

    </table>

</div>
