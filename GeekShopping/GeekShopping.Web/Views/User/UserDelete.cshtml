@model GeekShopping.Web.Data.ValueObjects.UserViewModelWithId

<form asp-action="UserDelete">

    <input asp-for="Id" hidden />
    <input asp-for="Password" hidden />

    <br />

    <div class="container boder p-3">

        <h1 class="text-primary">Delete User</h1>

        <hr />

        <div class="row">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="col-2">
                <label asp-for="UserName" class="control-label pt-2" style="font-size:20px;"></label>
            </div>

            <div class="col-10 pb-3">
                <input asp-for="UserName" disabled class="form-control" />                
            </div>
                        
            <div class="col-2">
                <label asp-for="Role" class="control-label pt-2" style="font-size:20px;"></label>
            </div>

            <div class="col-10 pb-3">

                <select class="form-select" asp-for="Role" disabled arial-label="Default select a role">                    
                    <option value="Admin">Admin</option>
                    <option value="Client">Client</option>
                </select>                

            </div>

            <div class="col-5 offset-2">
                <a asp-action="UserIndex" class="btn-primary btn form-control ">Back to List</a>
            </div>

            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-danger form-control" />
            </div>

        </div>

    </div>

</form>
