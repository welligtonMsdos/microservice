@model GeekShopping.Web.Data.ValueObjects.UserViewModelWithId

<form asp-action="UserDelete">

    <input asp-for="Id" hidden />
    <input asp-for="Password" hidden />

    <br />

    <div class="container boder p-3">

        <h1 class="text-primary">Delete User</h1>

        <hr />

        <div class="row g-3 align-items-center">
            <div class="col-md-3 col-xl-2">
                <label asp-for="UserName" class="control-label pt-2"></label>
            </div>

            <div class="col-md-9 col-xl-10 pb-3">
                <input asp-for="UserName" class="form-control" disabled />
            </div>
        </div>

        <div class="row g-3 align-items-center">
            <div class="col-md-3 col-xl-2">
                <label asp-for="Role" class="control-label pt-2"></label>
            </div>

            <div class="col-md-9 col-xl-10 pb-3">
                <select class="form-select" asp-for="Role" disabled arial-label="Default select a role">
                    <option value="Admin">Admin</option>
                    <option value="Client">Client</option>
                </select>
            </div>
        </div>

        <div class="card-footer textAlignEnd">

            <a asp-action="UserIndex" class="btn-primary btn me-md-3">Back to List</a>

            <input type="submit" value="Delete" class="btn btn-danger" />

        </div>       

    </div>

</form>
