@model GeekShopping.Web.Data.ValueObjects.UserViewModel

<form asp-action="UserCreate">

    <br />

    <div class="container boder p-3">

        <h1 class="text-primary">Create User</h1>

        <hr />

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="row g-3 align-items-center">
            <div class="col-md-3 col-xl-2">
                <label asp-for="UserName" class="control-label pt-2"></label>
            </div>

            <div class="col-md-9 col-xl-10 pb-3">
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
        </div>

        <div class="row g-3 align-items-center">
            <div class="col-md-3 col-xl-2">
                <label asp-for="Password" class="control-label pt-2"></label>
            </div>

            <div class="col-md-9 col-xl-10 pb-3">
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>

        <div class="row g-3 align-items-center">
            <div class="col-md-3 col-xl-2">
                <label asp-for="Role" class="control-label pt-2"></label>
            </div>

            <div class="col-md-9 col-xl-10 pb-3">
                <select class="form-select" asp-for="Role" arial-label="Default select a role">
                    <option selected>Open this select</option>
                    <option value="Admin">Admin</option>
                    <option value="Client">Client</option>
                </select>

                <span asp-validation-for="Role" class="text-danger"></span>
            </div>
        </div>

        <div class="card-footer textAlignEnd">

            <a asp-action="UserIndex" class="btn-primary btn me-md-3">Back to List</a>

            <input type="submit" value="Create" class="btn btn-success" />

        </div>       

    </div>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}