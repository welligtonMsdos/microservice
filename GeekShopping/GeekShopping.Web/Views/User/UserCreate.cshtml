@model GeekShopping.Web.Data.ValueObjects.UserViewModel

<form asp-action="UserCreate">

    <br />

    <div class="container boder p-3">

        <h1 class="text-primary">Create User</h1>

        <hr />

        <div class="row">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="col-2">
                <label asp-for="UserName" class="control-label pt-2" style="font-size:20px;"></label>
            </div>

            <div class="col-10 pb-3">
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="Password" class="control-label pt-2" style="font-size:20px;"></label>
            </div>

            <div class="col-10 pb-3">
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="Role" class="control-label pt-2" style="font-size:20px;"></label>
            </div>

            <div class="col-10 pb-3">
                @* <textarea asp-for="Role" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Role" class="text-danger"></span> *@

                <select class="form-select" asp-for="Role" arial-label="Default select a role">
                    <option selected>Open this select</option>
                    <option value="Admin">Admin</option>
                    <option value="Client">Client</option>
                </select>
                <span asp-validation-for="Role" class="text-danger"></span>

            </div>
            
            <div class="col-5 offset-2">
                <a asp-action="UserIndex" class="btn-primary btn form-control ">Back to List</a>
            </div>

            <div class="col-5">
                <input type="submit" value="Create" class="btn btn-success form-control" />
            </div>

        </div>

    </div>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}